.container
  .row
    .col-xs-12.text-center
      - if current_student
        %h1= current_student.username
        = link_to 'Sign Out!', signout_path, method: :delete, class: 'btn btn-default'
      - else
        %h1 Student Sign Up
        = link_to 'Sign Up!', students_signup_path, class: 'btn btn-default'
        %h1 Student Sign In
        = link_to 'Sign In!', signin_path, class: 'btn btn-default'

  .row
    .col-md-4.text-center
      %h1 Assignment
      %h2= "Students: #{@studentone} & #{studenttwo}"

  .row
    .col-md-4.text-center
      %h1 Question(s):
      %div= @question

  .row
    .col-md-4.text-center
      .assignment_firepad
        .userlist
        .firepad
  .row
    .col-md-4.text-center
      .answer
      %input{:type => "Submit"}
            %a.btn
              %i.icon-search.icon-white



